
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

<div class="card mb-4">
    <div class="card-body">


    </div>
</div>


<h3>Teilnehmer</h3>


{{ form_errors(form) }}

<ul class="list-unstyled participants-form participants mb-3" data-prototype="{{ form_widget(form.participants.vars.prototype)|e('html_attr') }}">

        {# iterate over each existing tag and render its only field: name #}
        {% for participant in form.participants %}
            <li class="item">

                {{ form_row(participant.firstName) }}
                {{ form_row(participant.lastName) }}
                {{ form_row(participant.email) }}

            </li>
        {% endfor %}

</ul>

<hr />

<div class="clearfix">

    <button class="btn float-right" type="submit">Weiter</button>

</div>

{{ form_end(form) }}